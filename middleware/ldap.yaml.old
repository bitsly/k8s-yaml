apiVersion: apps/v1
kind: Deployment
metadata:
  name: ldap
  namespace: middleware
spec:
  replicas: 1
  selector:
    matchLabels:
      app: ldap
  template:
    metadata:
      labels:
        app: ldap
    spec:
      securityContext:
        runAsUser: 0
        runAsGroup: 0
        fsGroup: 0
      containers:
      - name: ldap
        image: mwaeckerlin/openldap:latest
        ports:
        - containerPort: 389
        - containerPort: 639
        env:
        - name: DOMAIN
          value: "bitsly.org"
        - name: PASSWORD
          value: admin
        volumeMounts:
        - name: ldap-data-volume
          mountPath: /var/lib/ldap
      - name: lam
        image: mwaeckerlin/lam:latest
        ports:
        - containerPort: 80
        volumeMounts:
        - name: lam-data-volume
          mountPath: /var/lib/ldap-account-manager/sess
      volumes:
      - name: ldap-data-volume
        hostPath:
          path: /var/k8s/ldap/data
      - name: lam-data-volume
        hostPath:
          path: /var/k8s/lam/data

---
apiVersion: v1
kind: Service
metadata:
  name: ldap
  namespace: middleware
spec:
  selector:
    app: ldap
  externalIPs:
  - 192.168.192.111
  - 192.168.11.111
  ports:
  - name: 389port
    port: 389
    targetPort: 389
  - name: 639port
    port: 639
    targetPort: 639
  - name: 7070port
    port: 7070
    targetPort: 80
